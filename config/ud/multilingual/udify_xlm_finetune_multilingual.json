{
  "dataset_reader": {
    "use_lang_ids": true,
    "lazy": false,
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      },
      "bert": {
        "type": "udify-xlm",
        "vocab": "config/archive/xlm-mlm-100-1280/vocab.json",
        "pretrained_model": "xlm-mlm-100-1280",
        "do_lowercase": false,
        "use_starting_offsets": true
      }
    }
  },
  "train_data_path": "data/ud/train.conllu",
  "validation_data_path": "data/ud/dev.conllu",
  "test_data_path": "data/ud/test.conllu",
  "vocabulary": {
    "directory_path": "data/vocab/tr_imst/vocabulary"
  },
  "model": {
    "pretrained_model": "xlm-mlm-100-1280",
    "word_dropout": 0.2,
    "mix_embedding": 16,
    "layer_dropout": 0.1,
    "tasks": ["upos", "feats", "lemmas", "deps"],
    "text_field_embedder": {
      "type": "udify_embedder",
      "dropout": 0.5,
      "allow_unmatched_keys": true,
      "embedder_to_indexer_map": {
        "bert": ["bert", "bert-offsets", "bert-lang-ids"]
      },
      "token_embedders": {
        "bert": {
          "type": "udify-xlm",
          "pretrained_model": "xlm-mlm-100-1280",
          "requires_grad": true,
          "dropout": 0.15,
          "layer_dropout": 0.1,
          "combine_layers": "all"
        }
      }
    },
    "encoder": {
      "type": "pass_through",
      "input_dim": 1280
    },
    "decoders": {
      "upos": {
        "encoder": {
          "type": "pass_through",
          "input_dim": 1280
        }
      },
      "feats": {
        "encoder": {
          "type": "pass_through",
          "input_dim": 1280
        },
        "adaptive": true
      },
      "lemmas": {
        "encoder": {
          "type": "pass_through",
          "input_dim": 1280
        },
        "adaptive": true
      },
      "deps": {
        "tag_representation_dim": 256,
        "arc_representation_dim": 1280,
        "encoder": {
          "type": "pass_through",
          "input_dim": 1280
        }
      }
    }
  },
  "iterator": {
    "batch_size": 32,
    "maximum_samples_per_batch": ["num_tokens", 32 * 100]
  },
  "trainer": {
    "num_epochs": 80,
    "patience": 80,
    "num_serialized_models_to_keep": 10,
    "keep_serialized_model_every_num_seconds": 2 * 60 * 60,
    "model_save_interval": 1 * 60 * 60,
    "should_log_learning_rate": true,
    "should_log_parameter_statistics": true,
    "summary_interval": 2500,
    "optimizer": {
      "type": "bert_adam",
      "b1": 0.9,
      "b2": 0.99,
      "weight_decay": 0.01,
      "lr": 1e-3,
      "parameter_groups": [
        [["^text_field_embedder.*.xlm_model"], {}],
        [["^text_field_embedder.*._scalar_mix",
          "^scalar_mix",
          "^decoders",
          "^shared_encoder"], {}]
      ]
    },
    "learning_rate_scheduler": {
      "type": "ulmfit_sqrt",
      "model_size": 1,
      "warmup_steps": 8000,
      "start_step": 21695,
      "factor": 5.0,
      "gradual_unfreezing": true,
      "discriminative_fine_tuning": true,
      "decay_factor": 0.04
    }
  },
  "udify_replace": [
    "dataset_reader.token_indexers",
    "model.text_field_embedder",
    "model.encoder",
    "model.decoders.xpos",
    "model.decoders.deps.encoder",
    "model.decoders.upos.encoder",
    "model.decoders.feats.encoder",
    "model.decoders.lemmas.encoder",
    "trainer.learning_rate_scheduler",
    "trainer.optimizer"
  ]
}